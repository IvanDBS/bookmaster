# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/bookmaster_development
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=bookmaster_development
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Rails Configuration
RAILS_ENV=development
RAILS_MASTER_KEY=your_master_key_here
SECRET_KEY_BASE=your_secret_key_base_here

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_EXPIRATION_TIME=24.hours

# Email Configuration (for development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_DOMAIN=localhost

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Security Configuration
RACK_ATTACK_ENABLED=true
SECURE_HEADERS_ENABLED=true
ALLOWED_HOSTS=localhost,127.0.0.1

# Frontend Configuration
VITE_API_URL=http://localhost:3000/api/v1
VITE_APP_NAME=BookMaster

# Production Configuration (change these for production)
SENTRY_DSN=your_sentry_dsn_here
LOG_LEVEL=info

# Additional Security Settings
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Strict
SESSION_TIMEOUT=24.hours

# Monitoring and Alerting
SECURITY_ALERT_EMAIL=security@yourdomain.com
FAILED_LOGIN_THRESHOLD=5
ACCOUNT_LOCKOUT_DURATION=30.minutes
